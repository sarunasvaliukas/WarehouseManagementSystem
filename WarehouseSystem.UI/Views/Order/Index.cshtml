@model IEnumerable<WarehouseSystem.API.Models.OrderModel>

<p>
    <div class="form-group">
        <input type="button" value="New order" class="btn btn-default" onclick="location.href=location.href='@Url.Action("Edit", "Order")'" />
    </div>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StoreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductModel.Manufacturer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductModel.ModelNumber)
        </th>    
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StoreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductModel.Manufacturer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductModel.ModelNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
